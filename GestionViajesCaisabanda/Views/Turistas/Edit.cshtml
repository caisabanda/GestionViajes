@model GestionViajesCaisabanda.Models.Turista

@{
    ViewData["Title"] = "Editar Turista";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-warning py-3 text-center">
                <h4 class="mb-0 text-dark fw-bold"><i class="bi bi-pencil-square me-2"></i>Editar Datos</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="turista_id" />
                    <div class="form-floating mb-3">
                        <input asp-for="nombre" class="form-control bg-light border-0" />
                        <label asp-for="nombre">Nombre</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="apellido" class="form-control bg-light border-0" />
                        <label asp-for="apellido">Apellido</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="email" class="form-control bg-light border-0" />
                        <label asp-for="email">Email</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="telefono" class="form-control bg-light border-0" />
                        <label asp-for="telefono">Teléfono</label>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg rounded-pill fw-bold">Actualizar Turista</button>
                        <a asp-action="Index" class="btn btn-link text-muted small text-decoration-none">Cancelar cambios</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>