@model GestionViajesCaisabanda.Models.Destino

@{
    ViewData["Title"] = "Editar Destino";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-warning py-3 text-center">
                <h4 class="mb-0 text-dark fw-bold">
                    <i class="bi bi-pencil-square me-2"></i>Actualizar Destino
                </h4>
            </div>
            <div class="card-body p-4 bg-white">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3 small"></div>

                    <input type="hidden" asp-for="destino_id" />

                    <div class="form-floating mb-3">
                        <input asp-for="nombre" class="form-control border-0 bg-light" placeholder="Nombre" />
                        <label asp-for="nombre">Nombre del Destino</label>
                        <span asp-validation-for="nombre" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="pais" class="form-control border-0 bg-light" placeholder="País" />
                        <label asp-for="pais">País</label>
                        <span asp-validation-for="pais" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="descripcion" class="form-control border-0 bg-light" placeholder="Descripción" style="height: 100px"></textarea>
                        <label asp-for="descripcion">Descripción del Viaje</label>
                        <span asp-validation-for="descripcion" class="text-danger small"></span>
                    </div>

                    <div class="input-group mb-4">
                        <span class="input-group-text bg-warning text-dark border-0 fw-bold">$</span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="costo" class="form-control border-0 bg-light" placeholder="Costo" />
                            <label asp-for="costo">Costo Actualizado</label>
                        </div>
                        <span asp-validation-for="costo" class="text-danger small w-100"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning btn-lg rounded-pill shadow-sm fw-bold">
                            <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small">
                            <i class="bi bi-arrow-left"></i> Cancelar y volver al listado
                        </a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light text-center py-2">
                <small class="text-muted italic">Editando Registro ID: #@Model.destino_id</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}