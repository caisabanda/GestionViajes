@model GestionViajesCaisabanda.Models.Destino

@{
    ViewData["Title"] = "Eliminar Destino";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-danger py-3 text-center">
                <h4 class="mb-0 text-white">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>¿Confirmar Eliminación?
                </h4>
            </div>
            <div class="card-body p-4 bg-white text-center">
                <p class="text-muted mb-4">Está a punto de borrar permanentemente el siguiente destino del sistema:</p>

                <div class="bg-light rounded-3 p-4 mb-4 text-start border">
                    <div class="mb-3">
                        <label class="fw-bold text-dark small text-uppercase">Nombre del Destino</label>
                        <div class="fs-5 text-primary">@Html.DisplayFor(model => model.nombre)</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold text-dark small text-uppercase">País</label>
                        <div><i class="bi bi-globe me-2"></i>@Html.DisplayFor(model => model.pais)</div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold text-dark small text-uppercase">Costo</label>
                        <div class="fw-bold text-success fs-5">$@Html.DisplayFor(model => model.costo)</div>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="destino_id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm">
                            <i class="bi bi-trash3 me-2"></i>Eliminar Definitivamente
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            Cancelar y Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>