@model IEnumerable<GestionViajesCaisabanda.Models.Destino>

@{
    ViewData["Title"] = "Gestión de Destinos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5 fw-bold text-dark">Catálogo de Destinos</h1>
        <p class="text-muted">Administración de lugares turísticos, descripciones y tarifas.</p>
    </div>
    <a asp-action="Create" class="btn btn-success shadow-sm px-4 py-2 rounded-pill">
        <i class="bi bi-plus-circle-fill me-2"></i> Nuevo Destino
    </a>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-dark text-white">
                <tr>
                    <th class="ps-4 py-3 border-0">@Html.DisplayNameFor(model => model.nombre)</th>
                    <th class="py-3 border-0">@Html.DisplayNameFor(model => model.pais)</th>
                    <th class="py-3 border-0">@Html.DisplayNameFor(model => model.descripcion)</th>
                    <th class="py-3 border-0">@Html.DisplayNameFor(model => model.costo)</th>
                    <th class="text-center py-3 border-0 pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                                    <i class="bi bi-map text-success"></i>
                                </div>
                                <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.nombre)</span>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-globe-americas me-1 text-primary"></i> @Html.DisplayFor(modelItem => item.pais)
                            </span>
                        </td>
                        <td>
                            <small class="text-muted text-wrap" style="max-width: 250px; display: block;">
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </small>
                        </td>
                        <td>
                            <span class="fw-bold text-success fs-5">
                                $@Html.DisplayFor(modelItem => item.costo)
                            </span>
                        </td>
                        <td class="text-center pe-4">
                            <div class="btn-group shadow-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.destino_id" class="btn btn-sm btn-outline-warning" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.destino_id" class="btn btn-sm btn-outline-info" title="Detalles">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.destino_id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-pigeon text-muted" style="font-size: 3rem; opacity: 0.3;"></i>
        <p class="text-muted mt-2">No hay destinos configurados en la base de datos.</p>
    </div>
}