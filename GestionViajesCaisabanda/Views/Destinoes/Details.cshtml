@model GestionViajesCaisabanda.Models.Destino

@{
    ViewData["Title"] = "Detalles del Destino";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8 col-lg-7">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="card-header bg-info py-3 text-center">
                <h4 class="mb-0 text-white">
                    <i class="bi bi-info-circle-fill me-2"></i>Información del Destino
                </h4>
            </div>

            <div class="card-body p-4 bg-white">
                <div class="text-center mb-4">
                    <div class="bg-info bg-opacity-10 d-inline-block p-4 rounded-circle mb-3">
                        <i class="bi bi-geo-alt-fill text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h2 class="fw-bold text-dark">@Html.DisplayFor(model => model.nombre)</h2>
                    <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
                        <i class="bi bi-globe-americas me-1 text-primary"></i> @Html.DisplayFor(model => model.pais)
                    </span>
                </div>

                <hr class="border-secondary opacity-25">

                <div class="row g-4 mt-2">
                    <div class="col-sm-12">
                        <label class="fw-bold text-muted small text-uppercase d-block mb-1">Descripción del Viaje</label>
                        <p class="text-dark bg-light p-3 rounded-3 border">
                            @Html.DisplayFor(model => model.descripcion)
                        </p>
                    </div>

                    <div class="col-sm-6">
                        <label class="fw-bold text-muted small text-uppercase d-block mb-1">Tarifa Actual</label>
                        <div class="fs-4 fw-bold text-success">
                            <i class="bi bi-cash-stack me-2"></i>$@Html.DisplayFor(model => model.costo)
                        </div>
                    </div>

                    <div class="col-sm-6 text-end align-self-end">
                        <label class="fw-bold text-muted small text-uppercase d-block mb-1">ID de Registro</label>
                        <span class="badge bg-dark">#@Model?.destino_id</span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-5 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.destino_id" class="btn btn-warning rounded-pill px-4 shadow-sm">
                        <i class="bi bi-pencil-square me-1"></i> Editar Información
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>